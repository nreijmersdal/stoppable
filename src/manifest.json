{
  "manifest_version": 2,

  "name": "Stoppable",
  "description": "Empower yourself to stop wasting time on excessive website visits.",
  "version": "0.0.9",
  "icons": { "48": "icon.png", "128": "icon_128.png" },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["stoppable.js"],
      "css": ["stoppable.css"],
      "run_at": "document_start"
    }
  ],  
  "permissions": [
    "activeTab",
    "storage"
  ]
}